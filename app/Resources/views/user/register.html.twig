{% extends 'home.html.twig' %}

{% block body %}
    <div class="container">
        <section>
            <h1>Register</h1>
            <h3>{{ base_dir }}</h3>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                {{ form_row(form.name) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.roles) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword.first) }}
            </div>
            <div class="form-group">
                {{ form_row(form.plainPassword.second) }}
            </div>

            <button type="submit">Register!</button>
            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}